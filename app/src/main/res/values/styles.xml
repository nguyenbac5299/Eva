<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppTheme</item>
        <item name="colorPrimaryDark">@color/colorPinkBackground</item>
        <item name="colorAccent">@color/colorAppTheme</item>
    </style>
    <style name="Theme.MyFancyTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_back_24</item>
    </style>
    <style name="TimePickerTheme" parent="@android:style/Widget.DeviceDefault.DatePicker">
        <item name="android:divider">@color/colorPinkButton</item>
        <item name="android:numbersTextColor">@color/colorPinkButton</item>
        <item name="android:textColor">@color/colorPinkButton</item>
    </style>

</resources>