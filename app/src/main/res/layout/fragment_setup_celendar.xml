<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/len_20">
    <TextView
        android:id="@+id/text_setup_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detail_setup_calendar"
        style="@style/TextSubTitleSetup"/>

    <CalendarView
        android:id="@+id/setup_calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:layout_marginTop="@dimen/len_80"
        android:layout_below="@+id/text_setup_calendar"
        />
    <Button
        android:id="@+id/button_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pink_big_button"
        android:layout_margin="@dimen/len_40"
        android:layout_alignParentBottom="true"
        android:text="@string/finish"
        />

</RelativeLayout>