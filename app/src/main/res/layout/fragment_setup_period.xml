<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/text_setup_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/detail_setup_period"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"/>

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:np_width="64dp"
        app:np_height="180dp"
        app:np_dividerColor="@color/colorDivider"
        app:np_max="13"
        app:np_min="2"
        app:np_wrapSelectorWheel="true"
        app:np_selectedTextColor="@color/colorPinkText"
        app:np_textColor="@color/colorPinkBackground"
        app:np_value="5"
        app:np_wheelItemCount="5"
        android:layout_below="@+id/text_setup_period"/>

</RelativeLayout>