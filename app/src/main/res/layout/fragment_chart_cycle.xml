<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/len_10">
    <TextView
        android:id="@+id/text_guess"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="1"
        android:text="@string/guess"
        style="@style/TextChartTitle"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/len_0"
       android:orientation="horizontal"
       android:layout_weight="3">
       <LinearLayout
           android:layout_width="@dimen/len_0"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center"
           android:background="@drawable/bg_blue_pms"
           android:layout_margin="@dimen/len_10">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/menu_period"
               style="@style/TextChartSubTitle"/>
           <TextView
               android:id="@+id/text_period_guess"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5 ngày"
               android:layout_marginTop="@dimen/len_10"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="@dimen/len_0"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:orientation="vertical"
           android:gravity="center"
           android:background="@drawable/bg_blue_pms"
           android:layout_margin="@dimen/len_10">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/menu_cycle"
               style="@style/TextChartSubTitle"/>
           <TextView
               android:id="@+id/text_cycle_guess"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="28 ngày"
               android:layout_marginTop="@dimen/len_10" />
       </LinearLayout>
   </LinearLayout>
<!--    <View-->
<!--        android:id="@+id/view_linear1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/len_0"-->
<!--        android:layout_weight="0.3"-->
<!--        android:layout_below="@+id/linear_edit_period"-->
<!--        android:background="@color/colorBigLine" />-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="0.03"
        android:layout_below="@+id/linear_edit_period"
        android:background="@color/colorLine"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginHorizontal="@dimen/len_20"/>

    <TextView
        android:id="@+id/text_chart_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="1"
        android:text="1/1 -2/2"
        style="@style/TextChartTitle"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:orientation="horizontal"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="@dimen/len_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_pink_pms"
            android:layout_margin="@dimen/len_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_period_title"
                style="@style/TextChartSubTitle"/>
            <TextView
                android:id="@+id/text_start_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sớm 5 ngày"
                android:layout_marginTop="@dimen/len_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/len_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_pink_pms"
            android:layout_margin="@dimen/len_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_period"
                style="@style/TextChartSubTitle"/>
            <TextView
                android:id="@+id/text_status_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ổn định"
                android:layout_marginTop="@dimen/len_10"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="0.03"
        android:layout_below="@+id/linear_edit_period"
        android:background="@color/colorLine"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginHorizontal="@dimen/len_20"/>

<!--    <View-->
<!--        android:id="@+id/view_linear2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/len_0"-->
<!--        android:layout_weight="0.3"-->
<!--        android:layout_below="@+id/linear_edit_period"-->
<!--        android:background="@color/colorBigLine" />-->
    <TextView
        android:id="@+id/text_time_period"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="1"
        android:text="@string/menu_cycle"
        style="@style/TextChartTitle"/>
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart_cycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="6"/>

    <View
        android:id="@+id/view_linear3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="0.03"
        android:layout_below="@+id/linear_edit_period"
        android:background="@color/colorLine"
        android:layout_marginTop="@dimen/len_8"
        android:layout_marginHorizontal="@dimen/len_20"/>
    <TextView
        android:id="@+id/text_time_cycle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="1"
        android:text="@string/menu_period"
        style="@style/TextChartTitle"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/bar_chart_period"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="6"/>

</LinearLayout>