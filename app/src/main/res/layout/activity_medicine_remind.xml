<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MedicineRemindActivity"
    android:layout_margin="@dimen/len_20"
    android:padding="@dimen/len_20">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextTitleDialog"
            android:text="@string/medicine_title"/>

    <LinearLayout
        android:id="@+id/layout_number_medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/len_20"
        android:layout_below="@+id/text_title">


        <TextView
            android:layout_width="@dimen/len_0"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="@string/medicine_number"
            android:gravity="center_vertical"
            style="@style/TextSubTitle"/>

        <ImageView
            android:id="@+id/image_minus_remind"
            android:layout_width="@dimen/len_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_minus_pink"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/text_number"
            android:layout_width="@dimen/len_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3"
            android:gravity="center"
            style="@style/TextNumberPink"/>
        <ImageView
            android:id="@+id/image_plus_remind"
            android:layout_width="@dimen/len_0"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_pink"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_medicine_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/medicine_description"
        android:layout_below="@id/layout_number_medicine"
        android:layout_marginTop="@dimen/len_20"
        style="@style/TextPink"/>

    <View
        android:id="@+id/view_linear1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_1"
        android:layout_marginVertical="@dimen/len_24"
        android:background="@color/colorLine"
        android:layout_below="@+id/text_medicine_description"/>

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:layout_below="@id/view_linear1"
        style="@style/TextSubTitle"/>

    <RelativeLayout
        android:id="@+id/layout_remind_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_time"
        android:layout_margin="@dimen/len_20">
        <TextView
            android:id="@+id/text_remind_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medicine_remind_one"
            style="@style/TextListTitle"/>

        <TextView
            android:id="@+id/text_time_medicine1"
            style="@style/TextTimePink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/medicine_time_one" />

    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_time_picker_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_remind_one"/>
<!--    <View-->
<!--        android:id="@+id/view_linear2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/len_1"-->
<!--        android:background="@color/colorLine"-->
<!--        android:layout_below="@+id/layout_time_picker_one"/>-->


    <RelativeLayout
        android:id="@+id/layout_remind_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_time_picker_one"
        android:layout_margin="@dimen/len_20">
        <TextView
            android:id="@+id/text_remind_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medicine_remind_two"
            style="@style/TextListTitle"/>

        <TextView
            android:id="@+id/text_time_medicine2"
            style="@style/TextTimePink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/medicine_time_two" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/layout_time_picker_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_remind_two"/>
<!--    <View-->
<!--        android:id="@+id/view_linear3"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/len_1"-->
<!--        android:background="@color/colorLine"-->
<!--        android:layout_below="@+id/layout_time_picker_two"/>-->
    <RelativeLayout
        android:id="@+id/layout_remind_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_time_picker_two"
        android:layout_margin="@dimen/len_20">
        <TextView
            android:id="@+id/text_remind_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/medicine_remind_three"
            style="@style/TextListTitle"/>
        <TextView
            android:id="@+id/text_time_medicine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/medicine_time_three"
            style="@style/TextTimePink"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layout_time_picker_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_remind_three"/>
<!--    <View-->
<!--        android:id="@+id/view_linear4"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/len_1"-->
<!--        android:background="@color/colorLine"-->
<!--        android:layout_below="@+id/layout_time_picker_three"/>-->
       <View
        android:id="@+id/view_linear2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_1"
        android:layout_marginVertical="@dimen/len_24"
        android:background="@color/colorLine"
        android:layout_below="@+id/layout_time_picker_three"/>
    <TextView
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/medicine_message"
        android:layout_below="@id/view_linear2"
        style="@style/TextSubTitle" />
    <EditText
        android:layout_marginLeft="@dimen/len_10"
        android:id="@+id/edit_message_medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_message"
        android:text="@string/medicine_message_detail"
        style="@style/TextPink"
        android:layout_marginTop="@dimen/len_20"/>
        <Button
            android:id="@+id/button_cancel_remind_medicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pink_big_button"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/edit_message_medicine"
            android:layout_marginTop="@dimen/len_40"/>
        <Button
            android:id="@+id/button_save_remind_medicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pink_big_button"
            android:text="@string/save"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_alignParentRight="true"
            android:layout_below="@id/edit_message_medicine"
            android:layout_marginTop="@dimen/len_40"/>
    </RelativeLayout>
</ScrollView>