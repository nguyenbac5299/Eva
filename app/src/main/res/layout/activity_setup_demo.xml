<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetupActivity"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_setup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="0.5"
        android:layout_marginHorizontal="@dimen/len_140"
        app:tabIndicatorColor="@color/colorMainPink"
        android:outlineSpotShadowColor="@color/colorMainPink"
        app:tabRippleColor="@color/colorMainPink"
        app:tabTextColor="@color/colorTextGrey"
        app:tabSelectedTextColor="@color/colorMainPink"
        android:outlineAmbientShadowColor="@color/colorMainPink" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="1"
        android:textSize="@dimen/len_32"
        android:text="@string/title_setup"
        android:gravity="center"
        android:layout_marginVertical="@dimen/len_40"
        android:textColor="@color/colorPinkText"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_setup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_0"
        android:layout_weight="8"
        android:layout_marginHorizontal="@dimen/len_60"
        android:gravity="center"/>

</LinearLayout>