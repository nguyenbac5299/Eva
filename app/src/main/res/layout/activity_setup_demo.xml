<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetupDemoActivity"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_setup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginHorizontal="70dp"
        app:tabIndicatorColor="@color/colorPinkButton"
        android:outlineSpotShadowColor="@color/colorPinkButton"
        app:tabRippleColor="@color/colorPinkButton"
        app:tabTextColor="@color/colorPinkButton"
        app:tabSelectedTextColor="@color/colorPinkText"
        android:outlineAmbientShadowColor="@color/colorPinkButton"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:text="@string/title_setup"
        android:gravity="center"
        android:layout_marginVertical="30dp"
        android:textColor="@color/colorPinkText"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_setup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"/>

</LinearLayout>