<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PeriodicRemindActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/text_message_periodic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextSubTitle"
        android:text="@string/time"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/medicine_time_one"
        style="@style/TextNumberPink"/>
    <FrameLayout
        android:id="@+id/layout_time_picker_periodic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_message_periodic"/>
    <View
        android:id="@+id/view_linear1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="12dp"
        android:background="@color/colorLine"
        android:layout_below="@+id/layout_time_picker_periodic"/>
    <TextView
        android:id="@+id/text_date_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_remind"
        style="@style/TextSubTitle"
        android:layout_below="@id/view_linear1"/>
    <CheckBox
        android:id="@+id/check_one_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_date_remind"
        android:layout_marginTop="10dp"
        android:text="@string/date_remind_one_day"
        android:layoutDirection="rtl"
        android:layout_marginHorizontal="10dp"/>
    <CheckBox
        android:id="@+id/check_two_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_one_day"
        android:layout_marginTop="10dp"
        android:text="@string/date_remind_two_day"
        android:layoutDirection="rtl"
        android:layout_marginHorizontal="10dp"/>
    <CheckBox
        android:id="@+id/check_in_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_two_day"
        android:layout_marginTop="10dp"
        android:text="@string/date_remind_in_day"
        android:layoutDirection="rtl"
        android:layout_marginHorizontal="10dp"/>
    <View
        android:id="@+id/view_linear2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginVertical="12dp"
        android:background="@color/colorLine"
        android:layout_below="@+id/check_in_day"/>

    <TextView
        android:id="@+id/text_message_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/medicine_message"
        android:layout_below="@id/view_linear2"
        android:textColor="@color/colorTextBlack"
        style="@style/TextSubTitle"
        android:layout_marginTop="12dp"/>
    <EditText
        android:layout_marginLeft="5dp"
        android:id="@+id/edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_message_remind"
        android:text="@string/remind_message"
        style="@style/TextPink"/>



</RelativeLayout>