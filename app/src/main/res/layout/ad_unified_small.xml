<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/len_10"
            android:paddingRight="@dimen/len_10">

            <LinearLayout
                android:layout_width="@dimen/len_0"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/len_5"
                android:layout_marginBottom="@dimen/len_5"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ad_app_icon"
                    android:layout_width="@dimen/len_90"
                    android:layout_height="@dimen/len_90"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/len_90"
                    android:layout_gravity="top"
                    android:layout_marginLeft="@dimen/len_8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ad_headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="demo"
                            android:textColor="@color/colorTextBlack"
                            android:textSize="@dimen/len_26"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/len_6"
                            android:maxWidth="@dimen/len_400"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="@dimen/len_40"
                            android:layout_height="@dimen/len_30"
                            android:layout_marginLeft="@dimen/len_20"
                            android:background="@drawable/bg_ad"
                            android:gravity="center"
                            android:text="AD"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/len_24"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>
                    <RatingBar
                        android:id="@+id/ad_stars"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/ad_body"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="20dp"
                        android:maxLines="2"
                        android:text="demo"
                        android:textColor="@color/colorTextGrey"
                        android:textSize="@dimen/len_20"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/len_0"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center">

<!--                    <TextView-->
<!--                        android:id="@+id/ad_price"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textSize="@dimen/len_24"-->
<!--                        android:visibility="gone"/>-->

<!--                    <TextView-->
<!--                        android:id="@+id/ad_store"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textSize="@dimen/len_24"-->
<!--                        android:visibility="gone"/>-->

                    <Button
                        android:id="@+id/ad_call_to_action"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/len_64"
                        android:background="@drawable/bg_pink_small_button"
                        android:stateListAnimator="@null"
                        android:text="LEARN MORE"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/len_24"
                        android:layout_gravity="center"
                        android:padding="@dimen/len_6" />
                </LinearLayout>
        </LinearLayout>
</com.google.android.gms.ads.formats.UnifiedNativeAdView>

