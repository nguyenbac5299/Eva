<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/text_setup_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/detail_setup_cycle"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"/>
    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker_cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:np_width="64dp"
        app:np_height="180dp"
        app:np_dividerColor="@color/colorDivider"
        app:np_max="35"
        app:np_min="20"
        app:np_wrapSelectorWheel="true"
        app:np_selectedTextColor="@color/colorPinkText"
        app:np_textColor="@color/colorPinkBackground"
        app:np_value="28"
        tools:ignore="MissingConstraints"
        android:layout_below="@+id/text_setup_cycle" />


</RelativeLayout>