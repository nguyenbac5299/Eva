<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/len_10">
    <FrameLayout
        android:id="@+id/layout_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_image"
            android:layout_width="@dimen/len_120"
            android:layout_height="@dimen/len_120"
            android:src="@drawable/ic_mood_angry"/>
        <ImageView
            android:id="@+id/image_selected"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:src="@drawable/ic_selected_green"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="@dimen/len_6"
            android:visibility="gone"/>
    </FrameLayout>
    <TextView
        android:id="@+id/text_image"
        android:layout_width="@dimen/len_120"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_image"
        android:text="demo"
        android:layout_marginTop="@dimen/len_4"
        android:textSize="@dimen/len_26"
        android:gravity="center"/>
</RelativeLayout>